{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2020",
    "lib": ["es2021"],
    "declaration": false,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}